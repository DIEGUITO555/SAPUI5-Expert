<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

               <Dialog >
                <Table items="{odataNorthwind>Orders}">
                    <columns>
                        <Column>
                            <Label text="{i18n>OrderID}"/>
                        </Column>
                        <Column>
                            <Label text="{i18n>Freight}"/>
                        </Column>
                        <Column>
                            <Label text="{i18n>ShipAddress}"/>
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem type="Navigation"
                                        press="onNavToOrderDetails" >
                            <cells>
                                <Text text="{odataNorthwind>OrderID}"/>
                                <Text text="{odataNorthwind>Freight} "/>
                                <Text text="{odataNorthwind>ShipAddress}"/>
                                
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>  
                <endButton>
                    <Button text="{i18n>close}"
                            type="Reject"
                            press="onCloseOrders"/>
                </endButton>
               </Dialog>  

                

</core:FragmentDefinition>        