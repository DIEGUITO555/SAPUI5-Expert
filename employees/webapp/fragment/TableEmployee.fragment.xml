<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

            <Panel >
                <Button text="{i18n>ShowCity}" 
                        visible="{jsonConfig>/visibleBtnShowCity}"
                        press="onShowCity" 
                        class="sapUiSmallMarginEnd"/>
                <Button text="{i18n>HideCity}" 
                        visible="{jsonConfig>/visibleBtnHideCity}"
                        press="onHideCity" />        
                <Table id="tableEmployee"
                        items="{jsonEmployees>/Employees}">
                    <columns>
                        <Column visible="{jsonConfig>/visibleID}" >
                            <header>
                                <Label text="{i18n>tableID}"/>
                            </header>
                        </Column>
                        <Column visible="{jsonConfig>/visibleName}">
                            <header>
                                <Label text="{i18n>tableName}"/>
                            </header>
                        </Column>
                        <Column visible="{jsonConfig>/visibleCountry}">
                            <header>
                                <Label text="{i18n>tableCountry}"/>
                            </header>
                        </Column>
                        <Column visible="{jsonConfig>/visibleCity}">
                            <header>
                                <Label text="{i18n>tableCity}"/>
                            </header>
                        </Column>
                        <Column width="100px">
                            <header>
                                <Label text="{i18n>tableShowDetails}"/>
                            </header>
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem type="Active"
                                        press="onShowOrders">
                            <cells>
                                <Text text="{jsonEmployees>EmployeeID}"/>
                                <Text text="{jsonEmployees>FirstName} {jsonEmployees>LastName}"/>
                                <Text text="{jsonEmployees>Country}"/>
                                <Text text="{jsonEmployees>City}"/>
                                <core:Icon src="sap-icon://show" press="showOrders"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

                <HBox id="ordersTable">
                
                </HBox>
            </Panel>

</core:FragmentDefinition>