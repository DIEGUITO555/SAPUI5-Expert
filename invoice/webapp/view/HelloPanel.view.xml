<mvc:View controllerName="logaligroup.invoice.controller.HelloPanel"
         xmlns="sap.m"
         xmlns:core="sap.ui.core"
         xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
   
    <Panel id="_IDGenPanel1" headerText="{i18n>helloPanel}">
            <content>
                <Button class="sapUiSmallMarginBeginEnd"
                        id="helloDialogButton"
                        icon="sap-icon://add-contact"
                        text="{i18n>helloDialoBut}"
                        press="onOpenDialog"/>
                <Button id="_IDGenButton1" class="sapUiSmallMarginEnd"
                        type="Emphasized" 
                        text="{i18n>sayHello}"
                        tooltip="{i18n>sayHello}"
                        press="onShowHello"/>
                <Input  id="_IDGenInput1" value="{/recipient/name}"
                        description="Hello {/recipient/name}" 
                        valueLiveUpdate= "true"
                        width="60%"/>
                <Text id="_IDGenText1" class="sapUiSmallMarginBeginEnd boldElements"
                        text="Hello {/recipient/name}"/>
            </content>
     </Panel>   

      <core:Fragment id="fragment"
                    fragmentName="logaligroup.invoice.fragment.form01" 
                    type="XML"/>   
         
</mvc:View>